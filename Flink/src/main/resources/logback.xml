<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <!-- 抑制 Flink MiniCluster 关闭相关的警告 -->
    <logger name="org.apache.flink.streaming.api.operators.collect.CollectResultFetcher" level="ERROR" additivity="false"/>

    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>