    <camelContext id="demo-test" xmlns="http://camel.apache.org/schema/spring">
        <route id="112233">
            <from uri="timer:init?delay=0&amp;period=24h"/>
            <setHeader name="name">
                <groovy>body.dqjovih1jo2</groovy>
            </setHeader>
            <onCompletion>
                <setBody>
                    <simple>FAILURE_ROUTE_ID: ${exchangeProperty['FAILURE_ROUTE_ID']}\nException: ${exchangeProperty['EXCEPTION_CAUGHT']}</simple>
